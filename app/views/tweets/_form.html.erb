<%= simple_form_for(@tweet) do |f| %>
  <%= f.error_notification %>
  <div class="mb-3">
    <%= f.input :tweet, label: 'Say something on your mind', input_label: { class: 'textarea' }, wrapper: false, label_html: { class: 'label' }, placeholder: 'Compose a new tweet...'%>
  </div>
  <%= f.button :submit, class: 'btn btn-primary' %>
<% end %>